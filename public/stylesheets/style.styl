body {
  padding: 50px;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
}

/***************************
*
* FOR TESTS 1 - 7
*
****************************/

.hidden {
  display: none;
}

.flexslider {
  max-width: 800px;
  margin: auto;
}


.overkillHeader {
  margin-bottom: 30px;
  
  .big {
    color: red;
    @media (max-width: 1000px) {
      display: none;
    }
  }

  .medium {
    color: blue;
    display: none;
    @media (min-width: 700px) and (max-width: 999px) {
      display: initial;
    }
  }

  .small {
    color: green;
    display: none;
    @media (min-width: 500px) and (max-width: 699px) {
      display: initial;
    }
  }

  .smaller {
    color: black;
    display: none;
    @media (max-width: 500px) {
      display: initial;
    }
  }
}
  

.mainContainer {
  display: flex;
  flex-direction: row;
  @media (max-width: 1000px) {
    flex-direction: row-reverse;
  }
  @media (max-width: 700px) {
    flex-direction: column;
  }
  
  .articleContainer {
    .row {
      margin-left: 0;
      margin-right: 0;
      width: 90%;
    }
    
    img {
      width: 100%;
    }
    
    width: 50%;
    margin: 0 auto 0 10px;
    order: 1;
    
    @media (max-width: 1000px) {
      margin: 0 10px 0 auto;
    }
    @media (max-width: 700px) {
      margin: auto;
      width: 100%;
    }
    @media (max-width: 500px) {
      order: 2;
      margin: auto;
      width: 100%;
    }
  }

  .flexsliderContainer {
    .row {
      margin-left: 0;
      margin-right: 0;
      width: 90%;
    }
    
    width: 50%;
    margin: 0 10px 0 auto;
    order: 2;
    
    @media (max-width: 1000px) {
      margin: 0 auto 0 10px;
    }
    @media (max-width: 700px) {
      margin: auto;
      width: 100%;
    }
    @media (max-width: 500px) {
      order: 1;
      margin: auto;
      width: 100%;
    }
  }
}


